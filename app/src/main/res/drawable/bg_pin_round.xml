<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Space contains text -->
    <!-- PinEntryEditText has error set -->
    <item android:state_active="true">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="@android:color/holo_red_dark" />
            <solid android:color="#E91E63" />
        </shape>
    </item>
<!--    ปุ่มที่อยู่หลัง Index  oO_ _ _    -->
    <item android:state_checked="true" android:state_focused="true">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#FF5722" />
            <solid android:color="#E26135" />
        </shape>
    </item>


    <!--Space is the next space for character input -->
    <!--    index ณ ตำแหน่งที่กำลังใส่รหัส  -->
    <item android:state_focused="true" android:state_selected="true">
        <shape android:shape="oval">
            <stroke android:width="1dp" android:color="#FF5722" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>


    <!--Space contains text and not focused -->
    <item android:state_focused="false" android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FFEB3B" />
            <solid android:color="#009688" />
        </shape>
    </item>

    <!-- PinEntryEditText is focused -->
    <!--    ตอนกดพิมพ์รหัส กำหนดค่าให้ปุ่มข้างหลังปุ่มที่กำลังพิมพ์  ooO_ _ _  -->
    <item android:state_focused="true">
        <shape android:shape="line">
            <stroke android:width="2dp" android:color="#FF7138" />
        </shape>
    </item>
    <!-- PinEntryEditText is not focused -->
    <!--    ตอนยังไม่กดพิมพ์รหัส    -->
    <item>
        <shape android:shape="line">
            <stroke android:width="2dp" android:color="#FF7138" />
<!--            <solid android:color="#B44639" />-->
        </shape>
    </item>

</selector>